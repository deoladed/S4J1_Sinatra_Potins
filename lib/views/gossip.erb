		<div class="text-dark"><br>
			<h3> Profil Potin </h3>
			<h5>Potin numero <%= params['splat'][0] %></h5><br>
<div class="jumbotron">
  <h5 class="display-20">Le THPotin en question :</h5>
  <p class="lead"><br><%= gossips_id.content %></p>
  <hr class="my-4">
  <p><strong> Auteur : </strong> <%= gossips_id.author %></p></p>
  <div class="d-flex flex-row-reverse">
  <a class="btn btn-primary btn-sm" href="../<%= params['splat'][0] %>/edit" role="button">Editer le potin</a></div>
</div>




			<h5>Commentaires</h5>
			<form action='/gossips/<%= params['splat'][0] %>/' method='POST'>
      Balance ton blase : <input type='text' name='user'/><br/>
      Balance ton comment : <input type='text' name='comment'/><br/>
      <input type='submit' value='Commenter'/>
  </form> 
    </form>
		</div>
		<div>
			<p> <% comment.each do |comment| %>
				<% puts comment %>
            <p><% if comment.page == params['splat'][0] %>
               

<div class="alert alert-success" role="alert">
  <p><%= comment.comment %></p>
  <hr>
  <p class="mb-0">par <%= comment.user %></p>
</div>


              <% end %>
            </p>
          <% end %></p>
		</div>





